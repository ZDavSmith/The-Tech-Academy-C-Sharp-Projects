<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow"> <!--on small screnn, 12 cloumns of space, medium, 10, large, 6. mx-auot (margin on x acess set to auto on both sides so that it is centered-->
        <div class="card-header text-center">
            <h5 class="m-0">Take five minutes to recieve a free quote!</h5>
        </div>
        <div class="card-body">
            <!-- HTML helper generating some HTML, SignUp method in Home controller, Method we are using is POST (Submitting info to the server) </-->
            @using (Html.BeginForm("GetQuote", "Home", FormMethod.Post))
            {
            <div class="row no-gutters">
                <div class="form-group col-md-12">
                    <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                </div>
                <div class="form-group col-md-12">
                    <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                </div>
                <div class="form-group col-md-12">
                    <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" />
                </div>
                
                    <h4 class="mb-2"> Date Of Birth: </h4>
                    <div class="form-group col-md-12">
                        <input name="DateofBirth" type="date" class="form-control"/>
                    </div>
                
                <div class="form-group col-md-12">
                    <input name="CarYear" type="text" class="form-control" placeholder="Car Year" />
                </div>
                <div class="form-group col-md-12">
                    <input name="CarMake" type="text" class="form-control" placeholder="Car Make" />
                </div>
                <div class="form-group col-md-12">
                    <input name="CarModel" type="text" class="form-control" placeholder="Car Model" />
                </div>
                <!-- DUI CHECK BUTTONS-->

                <div>
                    <h4 class="mb-2"> Have you ever had a DUI?</h4>
                    <div class="custom-control custom-radio col-sm-3">
                        <input type="radio" class="form-check-input" id="DuiYes" name="DuiCheck">
                        <label class="form-check-label" for="DuiYes">Yes</label>
                    </div>

                    <div class="custom-control custom-radio mb-4">
                        <input type="radio" class="form-check-input" id="DuiNo" name="DuiCheck" checked>
                        <label class="form-check-label" for="DuiNo">No</label>
                    </div>
                </div>


                <div class="form-group col-md-12">
                    <input name="Speeding Tickets" type="number" min="0" class="form-control" placeholder="Number of Speeding Tickets" />
                </div>
                <!-- Coverage Check-->
                <div>
                    <h4 class="mb-2"> Choose your coverage type:</h4>
                    <div class="custom-control custom-radio ">
                        <input type="radio" class="form-check-input" id="FullCoverage" name="Coverage">
                        <label class="form-check-label" for="FullCoverage">Full Coverage</label>
                    </div>


                    <div class="custom-control custom-radio mb-4">
                        <input type="radio" class="form-check-input" id="LiabiltyCoverage" name="Coverage" checked>
                        <label class="form-check-label" for="LiabilityCoverage">Liabilty Coverage</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-block btn-info">Submit for Quote</button>
            </div>
            }
        </div>
    </div>
</div>